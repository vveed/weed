<!-- defaultListScreen -->
 
<screen name="defaultList" position="center,center" size="1280,720" flags="wfNoBorder">
	<!-- Background -->
	<ePixmap position="0,0" size="1280,720" zPosition="-1" pixmap="~/weed_DarkGrey/images/mp_bg_detail.png" alphatest="blend" />
